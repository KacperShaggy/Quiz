<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.leaderboard"
             Title="leaderboard">
    <VerticalStackLayout >
        <Label 
            Text="Wynik"
            x:Name="results"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid Loaded="Grid_Loaded">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label x:Name="nickname1" Text="gracz1" Grid.Column="0" Grid.Row="0"></Label>
            <Label x:Name="point1" Text="1" Grid.Column="1" Grid.Row="0"></Label>
            <Label x:Name="nickname2" Text="gracz2" Grid.Column="0" Grid.Row="1"></Label>
            <Label x:Name="point2" Text="3" Grid.Column="1" Grid.Row="1"></Label>
        </Grid>
        <Button Text="NastÄ™pna runda" Clicked="Next_Round"></Button>
    </VerticalStackLayout>
</ContentPage>